#include <bits/stdc++.h> 
vector<string> Triangle(int n)
{
    vector<string> ans;
    char s='  ';    
    char d='*';
    
   // Write your code here
//     for(int i=1;i<=n;i++){
//     string a="";
//         for(int j=1;j<i;j++){
//             a.push_back(s);
//         }
//         for(int j=1;j<=((2*(n-i))+1);j++){
//             a.push_back(d);
//         }
//         ans.push_back(a);
    for(int i = n; i >= 1; --i) {
        string a="";
        for(int space = 0; space < n-i; ++space)
            a.push_back(s);

        for(int j = i; j <= 2*i-1; ++j)
            a.push_back(d);

        for(int j = 0; j < i-1; ++j)
            a.push_back(d);
        ans.push_back(a);
    }
    return ans;
}
